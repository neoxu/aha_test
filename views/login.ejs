<div class="login app-pages app-section">
    <div class="container">
        <div class="pages-title">
            <h3>Login</h3>
        </div>
        <form action="login" method="post">
            <input type="email" name="email" placeholder="Email">
            <input type="password" name="password" placeholder="password">
            <button class="button">Login</button>
            <div class="create-account">Not Registered? <a href="signup">Create an account</a></div>
        </form>

        <% if (locals.validated) { %>
            <br>
            <form action="resend-validation" method="post">
                <input type="email" name="email" placeholder="Validation Email">
                <button class="button">Resend</button>
            </form>
        <% } %>

        <div class="or">
            <h5>OR</h5>
            <form action="auth/facebook" method="get">
                <button class="button facebook">Login with Facebook</button>
            </form>

            <form action="auth/google" method="get">
                <button class="button google">Login with Google</button>
            </form>
        </div>
        <% if (locals.RecMessage) { %>
            <br>
            <div class="well well-lg"><%= RecMessage %></div>
        <% } %>
    </div>
</div>
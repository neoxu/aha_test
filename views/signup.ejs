<div class="register app-pages app-section">
    <div class="container">
        <div class="pages-title">
            <h3>Register</h3>
        </div>
        <form action="signup" method="post">
            <input type="email" name="email" placeholder="Email">
            <input type="password" name="password" placeholder="password">
            <input type="password" name="confirm" placeholder="confirm" >
            <button class="button">Register</button>
            <strong class="login-now">Your already registered? <a href="login">Login now</a></strong>
        </form>
        <div class="or">
            <h5>OR</h5>
            <form action="auth/facebook" method="get">
                <button class="button facebook">Login with Facebook</button>
            </form>

            <form action="auth/google" method="get">
                <button class="button google">Login with Google</button>
            </form>
        </div>
        <% if (locals.RecMessage) { %>
            <br>
            <div class="well well-lg"><%= RecMessage %></div>
        <% } %>
    </div>
</div>